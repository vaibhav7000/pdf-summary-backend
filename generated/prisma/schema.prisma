generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  email     String @unique
  firstname String
  lastname  String
  password  String
  pdf       Pdf[] // this table exist in a many relationship with Pdf
}

model Pdf {
  id     Int    @id @default(autoincrement())
  title  String
  link   String @unique
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}
